<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".VideoAulasActivity">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            app:title="VÃ­deo Aulas"
            app:titleTextColor="@color/black"
            app:navigationIcon="@drawable/ic_view_headline"
            app:navigationIconTint="@color/purple_700"
            app:titleCentered="true" />




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp">




            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:id="@+id/txt_bemvindo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aprenda assistindo! ðŸš€"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecione uma matÃ©ria no menu lateral e aprenda de forma divertida."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:paddingHorizontal="16dp" />




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="32dp">




                    <LinearLayout
                        android:id="@+id/container_videos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">




                        <TextView
                            android:id="@+id/placeholder_videos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nenhuma matÃ©ria selecionada. Toque no Ã­cone de menu â˜° para comeÃ§ar."
                            android:textColor="@color/text_secondary"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:paddingVertical="40dp"
                            android:layout_margin="16dp"/>




                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>




    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp"
        android:paddingTop="24dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">




            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_school"
                app:tint="@color/purple_700"
                android:contentDescription="Ãcone de estudo"
                android:layout_marginEnd="12dp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escolha a MatÃ©ria"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/purple_200"
            android:layout_marginBottom="8dp" />




        <ListView
            android:id="@+id/list_materias"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="@drawable/list_selector_materia"
            android:paddingBottom="8dp" />




        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_voltar_estudos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar aos Estudos"
            android:textSize="15sp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/teal_700"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingVertical="10dp" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>