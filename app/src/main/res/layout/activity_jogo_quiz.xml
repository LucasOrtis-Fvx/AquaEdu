<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".activity_quiz">








    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:titleTextColor="#222222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">




        <ImageButton
            android:id="@+id/btn_back_from_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_voltar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="16dp"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="Botão de Voltar"
            app:tint="#004D40"/>
    </androidx.appcompat.widget.Toolbar>








    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">








        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">








            <androidx.cardview.widget.CardView
                android:id="@+id/title_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">








                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quiz Escolar"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="16dp"
                    android:textColor="#FFFFFF"
                    android:background="#3F51B5" />
            </androidx.cardview.widget.CardView>








            <LinearLayout
                android:id="@+id/subject_selection_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">








                <TextView
                    android:id="@+id/tv_choose_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Escolha uma matéria"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="#333333" />








                <GridLayout
                    android:id="@+id/grid_subjects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:useDefaultMargins="true">








                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_ciencias"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Ciências"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="#4CAF50"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>








                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_portugues"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Português"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="#2196F3"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>








                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_arte"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Arte"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="#9C27B0"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>








                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_ingles"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Inglês"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="#F44336"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>








                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_matematica"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground">








                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Matemática"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="#FFA000"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>








                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_historia"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="História"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="#795548"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>








                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_geografia"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Geografia"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="#00897B"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_all_subjects"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Todas as Matérias"
                            android:textColor="#222222"
                            android:textStyle="bold"
                            android:background="#FFC107"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>
                </GridLayout>








                <TextView
                    android:id="@+id/tv_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toque em uma matéria para começar o quiz."
                    android:textSize="14sp"
                    android:paddingTop="12dp"
                    android:textColor="#666"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>








            <LinearLayout
                android:id="@+id/quiz_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="gone"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:clipToPadding="false">








                <TextView
                    android:id="@+id/tv_subject_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matéria: --"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"/>








                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pergunta exemplo vai aparecer aqui"
                    android:textSize="18sp"
                    android:padding="8dp"/>








                <RadioGroup
                    android:id="@+id/rg_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="4dp">








                    <RadioButton
                        android:id="@+id/rb_opt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opção A"
                        android:padding="8dp"/>








                    <RadioButton
                        android:id="@+id/rb_opt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opção B"
                        android:padding="8dp"/>








                    <RadioButton
                        android:id="@+id/rb_opt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opção C"
                        android:padding="8dp"/>








                    <RadioButton
                        android:id="@+id/rb_opt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opção D"
                        android:padding="8dp"/>
                </RadioGroup>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingTop="12dp">








                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pontuação: 0"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="8dp"/>








                    <Button
                        android:id="@+id/btn_prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anterior"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmar"
                        android:layout_marginStart="8dp"/>

                    <Button
                        android:id="@+id/btn_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sair"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
