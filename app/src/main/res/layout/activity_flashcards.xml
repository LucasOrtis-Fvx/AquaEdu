<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">




    <ImageButton
        android:id="@+id/btn_voltar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/icon_voltar"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"/>




    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flashcards"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/btn_voltar" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_voltar"
        android:layout_marginTop="20dp"
        android:padding="20dp">




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:weightSum="2"> <Button
                android:id="@+id/btnFlashcards"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="Flashcards"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:backgroundTint="@color/yellow"
                android:layout_marginEnd="6dp"/>




                <Button
                    android:id="@+id/btnCriar"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:text="Criar"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/purple_700"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"/> </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matérias"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="14dp"
                android:gravity="center" />




            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true">




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@color/materia_ciencia"
                    android:elevation="8dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ciências"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />




                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@color/materia_portugues"
                    android:elevation="8dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Português"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@color/materia_ingles"
                    android:elevation="8dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inglês"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@color/materia_arte"
                    android:elevation="8dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artes"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@color/materia_historia"
                    android:elevation="8dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="História"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@color/materia_matematica"
                    android:elevation="8dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matemática"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@color/materia_geografia"
                    android:elevation="8dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Geografia"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>
            </GridLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
