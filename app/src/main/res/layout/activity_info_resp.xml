<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity_info_resp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:text="Informações Responsáveis"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvLabelNome"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:text="Nome Completo:"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

            <EditText
                android:id="@+id/etNomeResponsavelInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Seu nome"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:backgroundTint="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/tvLabelNome"
                app:layout_constraintStart_toStartOf="@id/tvLabelNome"
                app:layout_constraintTop_toBottomOf="@id/tvLabelNome"/>

            <TextView
                android:id="@+id/tvLabelEmail"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="E-mail:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/etNomeResponsavelInfo"
                app:layout_constraintStart_toStartOf="@id/etNomeResponsavelInfo"
                app:layout_constraintTop_toBottomOf="@id/etNomeResponsavelInfo" />

            <EditText
                android:id="@+id/etEmailResponsavelInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Seu e-mail"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:backgroundTint="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/tvLabelEmail"
                app:layout_constraintStart_toStartOf="@id/tvLabelEmail"
                app:layout_constraintTop_toBottomOf="@id/tvLabelEmail" />

            <TextView
                android:id="@+id/tvLabelTelefone"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Telefone (com DDD):"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/etEmailResponsavelInfo"
                app:layout_constraintStart_toStartOf="@id/etEmailResponsavelInfo"
                app:layout_constraintTop_toBottomOf="@id/etEmailResponsavelInfo" />

            <EditText
                android:id="@+id/etTelefoneResponsavelInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Seu telefone"
                android:inputType="phone"
                android:maxLength="14"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:backgroundTint="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/tvLabelTelefone"
                app:layout_constraintStart_toStartOf="@id/tvLabelTelefone"
                app:layout_constraintTop_toBottomOf="@id/tvLabelTelefone" />

            <TextView
                android:id="@+id/tvLabelCpf"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="CPF:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="@id/etTelefoneResponsavelInfo"
                app:layout_constraintStart_toStartOf="@id/etTelefoneResponsavelInfo"
                app:layout_constraintTop_toBottomOf="@id/etTelefoneResponsavelInfo" />

            <TextView
                android:id="@+id/tvCpfResponsavelInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="123.456.789-00"
                app:layout_constraintEnd_toEndOf="@id/tvLabelCpf"
                app:layout_constraintStart_toStartOf="@id/tvLabelCpf"
                app:layout_constraintTop_toBottomOf="@id/tvLabelCpf" />

            <Button
                android:id="@+id/btnVoltarInfo"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/purple_700"
                android:padding="16dp"
                android:text="Salvar e Voltar"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/tvCpfResponsavelInfo"
                app:layout_constraintStart_toStartOf="@id/tvCpfResponsavelInfo"
                app:layout_constraintTop_toBottomOf="@id/tvCpfResponsavelInfo" />

            <TextView
                android:id="@+id/textViewFooter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="© 2025 - AquaEdu"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnVoltarInfo" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>