<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".cadastro_de_responsaveis">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">




            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:text="Cadastro de Responsáveis"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




            <EditText
                android:id="@+id/etNomeResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Nome completo"
                android:textColor="@android:color/black"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




            <EditText
                android:id="@+id/etEmailResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:textColor="@android:color/black"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/etNomeResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




            <EditText
                android:id="@+id/etCpfResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="CPF"
                android:textColor="@android:color/black"
                android:inputType="number"
                android:maxLength="11"
                android:padding="12dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/etEmailResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




            <TextView
                android:id="@+id/tvTipoResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Você é:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/etCpfResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




            <RadioGroup
                android:id="@+id/rgTipoResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvTipoResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">




                <RadioButton
                    android:id="@+id/rbMae"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mãe"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp"/>




                <RadioButton
                    android:id="@+id/rbPai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pai"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp"/>




                <RadioButton
                    android:id="@+id/rbAvo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avô/Avó"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp"/>




                <RadioButton
                    android:id="@+id/rbOutroResponsavel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outro"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="8dp"/>
            </RadioGroup>




            <EditText
                android:id="@+id/etOutroResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Especifique o parentesco"
                android:inputType="text"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/rgTipoResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




            <EditText
                android:id="@+id/etTelefoneResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Telefone (com DDD)"
                android:textColor="@android:color/black"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="12dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/etOutroResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




            <EditText
                android:id="@+id/etSenhaResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Senha"
                android:textColor="@android:color/black"
                android:inputType="textPassword"
                android:padding="12dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/etTelefoneResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




            <EditText
                android:id="@+id/etConfirmarSenhaResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Confirmar senha"
                android:textColor="@android:color/black"
                android:inputType="textPassword"
                android:padding="12dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/etSenhaResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




            <Button
                android:id="@+id/btnCadastrarResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cadastrar Responsável"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:backgroundTint="@color/purple_500"
                android:padding="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/etConfirmarSenhaResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




            <Button
                android:id="@+id/btnVoltarResponsavel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:backgroundTint="@color/teal_700"
                android:padding="12dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnCadastrarResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




            <TextView
                android:id="@+id/textViewFooter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="© 2025 - AquaEdu"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnVoltarResponsavel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>